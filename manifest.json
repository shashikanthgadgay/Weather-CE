{
    "manifest_version": 2,
    "name": "Weather",
    "short_name": "Weather",
    "description": "Weather App",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon":  {
            "16": "icons/favicon/02.png"
        },
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["updateIcon.js"],
        "persistent": false
    },
    "permissions": [ "storage", "alarms" ]
}
